@model IEnumerable<FlagExplorerApp.Models.Country>
@{
    ViewData["Title"] = "Detail Page";
}

<div class="text-md-left">
    <h4>Country Details</h4>

</div>

<div class="form-horizontal">
    <hr />
    <div class="form-group">

        <table class="table table-responsive" style="width:100px">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Flags)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Capital)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Population)
                </th>
            </tr>
            @foreach (var item in Model)
            {
                    <tr>
                        <td>
                        @Html.DisplayFor(modelItem => item.Name.Common)
                        </td>
                        <td>

                          <img src="@item.Flags.Svg" alt="@item.Name.Common" width="100" height="60" />

                        </td>

                        <td>
                        @Html.DisplayFor(modelItem => item.Capital)
                        </td>
                        <td>
                        @Html.DisplayFor(modelItem => item.Population)
                        </td>
                    </tr>
            }
        </table>
    </div>
</div>